# ===== 운영 환경 설정 =====

# ===== AWS ECR 설정 =====
AWS_ACCOUNT_ID=123456789012
ECR_REPOSITORY=mega-crew-backend
IMAGE_TAG=latest

# ===== 데이터베이스 설정 (운영) =====
DB_USERNAME=root
DB_PASSWORD=VerySecureProductionPassword123!
DB_POOL_SIZE=20
DDL_AUTO=validate
SHOW_SQL=false

# ===== Redis 설정 (운영) =====
REDIS_PORT=6379
REDIS_PASSWORD=SecureRedisPassword123!
REDIS_DATABASE=0
REDIS_TIMEOUT=1000

# ===== JWT 설정 (운영 - 매우 강력한 시크릿) =====
JWT_SECRET=production_jwt_secret_key_must_be_very_long_and_secure_at_least_32_characters_or_more
JWT_EXPIRATION=86400000

# ===== 애플리케이션 URL (운영) =====
FRONTEND_URL=https://your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ===== OAuth2 설정 (운영 - 실제 값 필수) =====
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
NAVER_CLIENT_ID=your_production_naver_client_id
NAVER_CLIENT_SECRET=your_production_naver_client_secret
KAKAO_CLIENT_ID=your_production_kakao_client_id
KAKAO_CLIENT_SECRET=your_production_kakao_client_secret

# ===== AI 서버 설정 (운영) =====
AI_SERVER_BASE_URL=https://your-ai-server.com
AI_SERVER_TIMEOUT=5000
AI_SERVER_MAX_RETRIES=3
AI_SERVER_MAX_POOLS=100

# ===== 수화 API 설정 (운영) =====
SL_API_KEY=your_production_sl_api_key
SL_API_URL=https://your-sl-api.com

# ===== 파일 업로드 설정 =====
MAX_FILE_SIZE=15MB
MAX_REQUEST_SIZE=15MB

# ===== 프레임 검증 설정 =====
FRAME_MAX_SIZE_MB=10
FRAME_MIN_SIZE_KB=1
FRAME_MAX_TIMESTAMP_DIFF_MINUTES=5

# ===== AWS 설정 (운영) =====
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=your-production-bucket
AWS_ACCESS_KEY_ID=your_production_access_key
AWS_SECRET_ACCESS_KEY=your_production_secret_key